<!-- Header -->
<header class="fixed w-full z-50 transition-apple glassmorphism light border-b border-gray-200 dark:border-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">
            <!-- Logo and title -->
            <div class="flex items-center">
                <div class="flex space-x-2 mr-4">
                    <!-- Logo UNY dinamis -->
                    <div class="w-8 h-8 bg-gray-200 dark:bg-gray-700 rounded-full flex items-center justify-center overflow-hidden">
                        {% if settings.branding.unyLogo.image %}
                            <img src="{{ settings.branding.unyLogo.image }}" alt="{{ settings.branding.unyLogo.alt }}" class="w-full h-full object-contain">
                        {% else %}
                            <span class="text-xs font-bold">UNY</span>
                        {% endif %}
                    </div>
                    <!-- Logo BEM KM dinamis -->
                    <div class="w-8 h-8 bg-gray-200 dark:bg-gray-700 rounded-full flex items-center justify-center overflow-hidden">
                        {% if settings.branding.bemLogo.image %}
                            <img src="{{ settings.branding.bemLogo.image }}" alt="{{ settings.branding.bemLogo.alt }}" class="w-full h-full object-contain">
                        {% else %}
                            <span class="text-xs font-bold">BEM</span>
                        {% endif %}
                    </div>
                </div>
                <div>
                    <h1 class="text-lg sm:text-xl font-bold heading-apple hidden sm:block">{{ settings.header.title | default("KARIR DAN KARYA MAHASISWA") }}</h1>
                    <h1 class="text-lg font-bold heading-apple sm:hidden">{{ settings.header.title | default("KARIR DAN KARYA MAHASISWA") }}</h1>
                    <p class="text-xs text-apple-gray">{{ settings.header.subtitle | default("BEM KM Universitas Negeri Yogyakarta") }}</p>
                </div>
            </div>

            <!-- Menu toggle button -->
            <button id="menu-toggle" class="p-2 focus:outline-none z-50">
                <div class="w-6 h-5 flex flex-col justify-between">
                    <span class="hamburger-line w-full h-0.5 bg-apple-darkgray dark:bg-white rounded-full line-1"></span>
                    <span class="hamburger-line w-full h-0.5 bg-apple-darkgray dark:bg-white rounded-full line-2"></span>
                    <span class="hamburger-line w-full h-0.5 bg-apple-darkgray dark:bg-white rounded-full line-3"></span>
                </div>
            </button>
        </div>
    </div>
</header>
