<!-- Programs section -->
<section id="programs" class="py-16 section-gradient-2 gradient-section">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-purple-500 dark:text-purple-300">{{ programsSettings.sectionLabel }}</span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">{{ programsSettings.title }}</h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ programsSettings.description }}
            </p>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
            {% for program in programs %}
            <div class="bg-white/70 dark:bg-white/10 backdrop-blur-lg program-card overflow-hidden shadow-lg transition-apple fade-up border border-white/20">
                <div class="relative h-48 overflow-hidden">
                    <img src="{{ program.image }}" alt="{{ program.title }}" class="w-full h-full object-cover img-zoom">
                </div>
                <div class="p-5">
                    <h3 class="text-lg font-bold heading-apple mb-2 text-apple-darkgray dark:text-white">{{ program.title }}</h3>
                    <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                        {{ program.description }}
                    </p>
                    <span class="bg-purple-100 dark:bg-purple-400/20 text-purple-600 dark:text-purple-200 px-3 py-1 rounded-full text-xs font-medium border border-purple-200 dark:border-purple-400/40">
                        {{ program.status }}
                    </span>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
