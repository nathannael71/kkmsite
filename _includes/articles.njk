<!-- Articles section - UPDATED for better centering -->
<section id="articles" class="py-16 section-gradient-4 gradient-section">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-purple-500 dark:text-purple-300">{{ articlesSettings.sectionLabel }}</span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">{{ articlesSettings.title }}</h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ articlesSettings.description }}
            </p>
        </div>
        
        <!-- Articles carousel - UPDATED container -->
        <div class="article-carousel-container fade-up">
            <div class="swiper article-carousel">
                <div class="swiper-wrapper pb-10">
                    {% for article in articles %}
                    <div class="swiper-slide">
                        <div class="article-card bg-white/70 dark:bg-white/10 backdrop-blur-lg rounded-2xl overflow-hidden shadow-lg transition-apple border border-white/20">
                            <div class="article-img-container">
                                <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-full object-cover">
                            </div>
                            <div class="article-content p-6">
                                <div class="flex items-center mb-4">
                                    <div class="w-10 h-10 rounded-full overflow-hidden mr-3">
                                        <img src="{{ article.authorPhoto }}" alt="{{ article.author }}" class="w-full h-full object-cover">
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-apple-darkgray dark:text-white">{{ article.author }}</p>
                                        <p class="text-xs text-gray-600 dark:text-gray-300">{{ article.date | formatDate }}</p>
                                    </div>
                                </div>
                                <h3 class="text-lg font-bold heading-apple mb-3 text-apple-darkgray dark:text-white">{{ article.title }}</h3>
                                <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3">
                                    {{ article.excerpt }}
                                </p>
                                <div class="mt-auto">
                                    <a href="/article.html?slug={{ article.slug }}" class="text-blue-500 dark:text-blue-300 font-medium inline-flex items-center">
                                        Read Article
                                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                
                <!-- Add pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
        
        <!-- View all articles button -->
        <div class="text-center mt-10">
            <a href="{{ articlesSettings.viewAllButtonUrl }}" class="inline-flex items-center px-6 py-3 bg-white/20 dark:bg-white/10 backdrop-blur-lg text-apple-darkgray dark:text-white rounded-full shadow-lg transition-apple hover:bg-white/30 dark:hover:bg-white/20 border border-white/20">
                {{ articlesSettings.viewAllButtonText }}
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
            </a>
        </div>
    </div>
</section>
