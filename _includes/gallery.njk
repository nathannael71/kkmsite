<!-- Gallery section - UPDATED for larger images -->
<section id="gallery" class="py-16 section-gradient-1 gradient-section overflow-hidden">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-purple-500 dark:text-purple-300">{{ gallerySettings.sectionLabel }}</span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">{{ gallerySettings.title }}</h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ gallerySettings.description }}
            </p>
        </div>
        
        <!-- Album carousel - UPDATED for larger images -->
        <div class="album-carousel-container fade-up">
            <div class="swiper album-carousel">
                <div class="swiper-wrapper pb-10">
                    {% for item in gallery %}
                    <div class="swiper-slide">
                        <div class="rounded-2xl overflow-hidden shadow-lg h-full">
                            <div class="gallery-img-container">
                                <img src="{{ item.image }}" alt="{{ item.title }}" class="w-full h-full object-cover">
                                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex flex-col justify-end p-6">
                                    <h3 class="text-white text-xl font-bold heading-apple">{{ item.title }}</h3>
                                    <p class="text-white/80 text-sm mt-2">{{ item.date }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                
                <!-- Add pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
        
        <!-- View all button -->
        <div class="text-center mt-12">
            <a href="{{ gallerySettings.viewAllButtonUrl }}" class="px-8 py-3 bg-white/20 dark:bg-white/10 backdrop-blur-lg text-apple-darkgray dark:text-white rounded-full transition-apple hover:bg-white/30 dark:hover:bg-white/20 border border-white/20 fade-up">
                {{ gallerySettings.viewAllButtonText }}
            </a>
        </div>
    </div>
</section>
