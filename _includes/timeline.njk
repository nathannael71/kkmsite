<!-- Timeline section -->
<section id="timeline" class="py-16 section-gradient-5 gradient-section">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-blue-500 dark:text-blue-300">{{ timelineSettings.sectionLabel }}</span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">{{ timelineSettings.title }}</h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ timelineSettings.description }}
            </p>
        </div>
        
        <div class="max-w-3xl mx-auto">
            <!-- Timeline accordion - Updated with improved arrow -->
            <div class="space-y-6 relative pl-10">
                {% for event in timeline %}
                <div class="timeline-node">
                    <div class="timeline-dot"></div>
                    <div class="apple-accordion bg-white/70 dark:bg-white/10 backdrop-blur-lg shadow-lg transition-apple fade-up border border-white/20">
                        <div class="apple-accordion-header flex justify-between items-center cursor-pointer">
                            <div class="pl-4">
                                <h3 class="text-lg font-bold heading-apple text-apple-darkgray dark:text-white">{{ event.title }}</h3>
                                <p class="text-gray-600 dark:text-gray-300 text-sm">{{ event.date }}</p>
                            </div>
                            <span class="accordion-icon pr-4">
                                <div class="custom-accordion-arrow">
                                    <i class="fas fa-chevron-down text-sm"></i>
                                </div>
                            </span>
                        </div>
                        <div class="accordion-content px-4 text-gray-600 dark:text-gray-300">
                            <p class="mb-4">{{ event.description }}</p>
                            <button class="px-6 py-2 bg-apple-blue text-white rounded-full btn-apple transition-apple">
                                {{ event.buttonText }}
                            </button>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
