<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KKM BEM KM UNY</title>
    
    <!-- Netlify Identity Widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['-apple-system', 'BlinkMacSystemFont', 'San Francisco', 'Segoe UI', 'Roboto', 'Helvetica Neue', 'sans-serif'],
                    },
                    colors: {
                        apple: {
                            blue: '#0071e3',
                            gray: '#86868b',
                            darkgray: '#1d1d1f',
                            lightgray: '#f5f5f7',
                        }
                    },
                    transitionTimingFunction: {
                        'apple': 'cubic-bezier(0.25, 0.1, 0.25, 1)',
                    },
                    backdropBlur: {
                        'apple': '20px',
                    }
                }
            }
        }
    </script>

    <!-- GSAP for animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/ScrollTrigger.min.js"></script>
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- SwiperJS for carousels -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    
    <!-- Netlify Identity for CMS -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    
    <!-- Style yang dipindahkan dari file asli ke file terpisah -->
    <link rel="stylesheet" href="/assets/css/styles.css">
</head>
<body class="bg-white dark:bg-apple-darkgray text-apple-darkgray dark:text-white transition-colors duration-500 overflow-x-hidden">
    <!-- Scroll to top button -->
    <button id="scroll-to-top" class="fixed bottom-8 right-8 z-50 bg-apple-blue text-white p-3 rounded-full shadow-lg transition-apple opacity-0 pointer-events-none w-12 h-12 flex items-center justify-center">
        <i class="fas fa-arrow-up"></i>
    </button>

    {% include "header.njk" %}

    <!-- Main content -->
    <main>
        {{ content | safe }}
    </main>

    {% include "footer.njk" %}

    <!-- Script yang dipindahkan dari file asli ke file terpisah -->
    <script src="/assets/js/scripts.js"></script>

    <!-- Script untuk Netlify Identity -->
    <script>
        if (window.netlifyIdentity) {
            window.netlifyIdentity.on("init", user => {
                if (!user) {
                    window.netlifyIdentity.on("login", () => {
                        document.location.href = "/admin/";
                    });
                }
            });
        }
    </script>
</body>
</html>
