<!-- Footer - UPDATED with smaller fonts -->
<footer class="py-12 bg-black text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Logo and description -->
            <div class="md:col-span-2">
                <div class="flex items-center mb-6">
                    <div class="flex space-x-2 mr-4">
                        <!-- Placeholder for UNY logo -->
                        <div class="w-8 h-8 bg-gray-700 rounded-full flex items-center justify-center">
                            <span class="text-xs font-bold">UNY</span>
                        </div>
                        <!-- Placeholder for BEM KM logo -->
                        <div class="w-8 h-8 bg-gray-700 rounded-full flex items-center justify-center">
                            <span class="text-xs font-bold">BEM</span>
                        </div>
                    </div>
                    <h3 class="text-lg font-bold heading-apple">KARIR DAN KARYA MAHASISWA</h3>
                </div>
                <p class="text-gray-400 mb-6">
                    {{ settings.footer.description }}
                </p>
                <div class="flex space-x-4">
                    {% for social in settings.footer.socialMedia %}
                    <a href="{{ social.url }}" target="_blank" class="text-gray-400 hover:text-white transition-apple">
                        <i class="{{ social.icon }} text-xl"></i>
                    </a>
                    {% endfor %}
                </div>
            </div>
            
            <!-- Quick links -->
            <div>
                <h4 class="text-base font-bold heading-apple mb-5">Quick Links</h4>
                <ul class="space-y-3">
                    {% for link in settings.footer.quickLinks %}
                    <li><a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-apple">{{ link.label }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            
            <!-- Contact info -->
            <div>
                <h4 class="text-base font-bold heading-apple mb-5">Contact Info</h4>
                <ul class="space-y-3">
                    <li class="flex items-start">
                        <i class="fas fa-map-marker-alt text-apple-blue mt-1 mr-3"></i>
                        <span class="text-gray-400">{{ settings.footer.contactInfo.address }}</span>
                    </li>
                    <li class="flex items-start">
                        <i class="far fa-envelope text-apple-blue mt-1 mr-3"></i>
                        <a href="mailto:{{ settings.footer.contactInfo.email }}" class="text-gray-400 hover:text-white transition-apple">{{ settings.footer.contactInfo.email }}</a>
                    </li>
                    <li class="flex items-start">
                        <i class="fab fa-instagram text-apple-blue mt-1 mr-3"></i>
                        <a href="https://instagram.com/{{ settings.footer.contactInfo.instagram }}" target="_blank" class="text-gray-400 hover:text-white transition-apple">@{{ settings.footer.contactInfo.instagram }}</a>
                    </li>
                </ul>
            </div>
        </div>
        
        <hr class="border-gray-800 my-8">
        
        <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-gray-400 text-sm mb-4 md:mb-0">
                {{ settings.footer.copyright }}
            </p>
            <div class="flex space-x-6">
                {% for link in settings.footer.legalLinks %}
                <a href="{{ link.url }}" class="text-gray-400 hover:text-white text-sm transition-apple">{{ link.label }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</footer>
