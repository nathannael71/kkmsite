<!-- Hero section with Apple style -->
<section id="home" class="w-full h-screen flex flex-col justify-center items-center overflow-hidden relative">
    <!-- Hero image slider -->
    <div class="absolute inset-0 z-0 bg-black">
        <div class="hero-slider relative h-full w-full">
            {% for slide in hero.slides %}
            <div class="hero-slide {% if loop.first %}active{% endif %}">
                <img src="{{ slide.image }}" alt="{{ slide.alt }}" class="w-full h-full object-cover opacity-40">
            </div>
            {% endfor %}
        </div>
    </div>
    
    <!-- Apple-style centered text -->
    <div class="container mx-auto px-4 text-center z-10 pt-24">
        <h1 class="text-4xl sm:text-6xl md:text-7xl font-bold heading-apple mb-6 text-white leading-tight">
            {{ hero.title | safe }}
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-white/90 max-w-3xl mx-auto subheading-apple mb-8">
            {{ hero.subtitle }}
        </p>
        
        <a href="#about" class="inline-flex items-center justify-center px-8 py-4 bg-apple-blue text-white rounded-full transition-apple hover:bg-blue-600 mt-4">
            <span class="font-medium text-lg">{{ hero.buttonText }}</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
        </a>
    </div>
    
    <!-- Slider navigation -->
    <div class="absolute bottom-6 left-0 right-0 flex justify-center space-x-2 z-10">
        {% for slide in hero.slides %}
        <button class="hero-nav-dot w-3 h-3 rounded-full bg-white {% if loop.first %}opacity-100{% else %}opacity-50{% endif %} transition-opacity" data-index="{{ loop.index0 }}"></button>
        {% endfor %}
    </div>
</section>
