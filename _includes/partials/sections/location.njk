<section id="location" class="py-16 section-gradient-3 gradient-section">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-purple-500 dark:text-purple-300">
                {{ settings.location.sectionLabel | default('Lokasi Kami') }}
            </span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">
                {{ settings.location.title | default('Our Location') }}
            </h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ settings.location.description | default('Kunjungi kami di Student Center Building, Universitas Negeri Yogyakarta.') }}
            </p>
        </div>
        
        <!-- Map container -->
        <div class="rounded-2xl overflow-hidden shadow-lg transition-apple fade-up">
            <div class="map-container">
                <iframe src="{{ settings.location.mapUrl | default('https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3953.1633170025876!2d110.38421261477832!3d-7.773598894403988!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e7a59b2d7b98905%3A0x19ad4f9a195770c7!2sUniversitas%20Negeri%20Yogyakarta!5e0!3m2!1sen!2sid!4v1656483265685!5m2!1sen!2sid') }}" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            
            <!-- Map info overlay -->
            <div class="bg-white/20 dark:bg-white/10 backdrop-blur-lg p-6 transition-apple border-t border-white/20 rounded-b-2xl">
                <div class="flex flex-wrap justify-between items-center">
                    <div class="mb-4 md:mb-0">
                        <h3 class="text-xl font-bold heading-apple mb-2 text-apple-darkgray dark:text-white">{{ settings.location.locationName | default('Student Center Building') }}</h3>
                        <p class="text-gray-600 dark:text-gray-300">{{ settings.location.fullAddress | default('Universitas Negeri Yogyakarta, Karangmalang, Yogyakarta') }}</p>
                    </div>
                    <div class="flex space-x-4">
                        <button onclick="shareLocation()" class="px-4 py-2 bg-white/20 dark:bg-white/10 backdrop-blur-lg text-apple-darkgray dark:text-white rounded-lg transition-apple hover:bg-white/30 dark:hover:bg-white/20 border border-white/20">
                            <i class="fas fa-share-alt mr-2"></i> Share
                        </button>
                        <a href="{{ settings.location.directionsUrl | default('https://www.google.com/maps/dir//Universitas+Negeri+Yogyakarta/') }}" target="_blank" class="px-4 py-2 bg-apple-blue text-white rounded-lg transition-apple hover:bg-blue-600">
                            <i class="fas fa-directions mr-2"></i> Directions
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- CTA section -->
        <div class="mt-24 text-center fade-up">
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple mb-6 text-apple-darkgray dark:text-white">{{ settings.location.cta.title | default('For Your Better Future') }}</h2>
            <p class="text-gray-600 dark:text-gray-300 text-xl max-w-3xl mx-auto mb-10">
                {{ settings.location.cta.description | default('Join us at Karir dan Karya Mahasiswa to enhance your skills, showcase your talent, and prepare for your future career.') }}
            </p>
            <a href="{{ settings.location.cta.buttonUrl | default('#') }}" class="px-8 py-4 bg-apple-blue text-white rounded-full btn-apple transition-apple text-lg font-medium">
                {{ settings.location.cta.buttonText | default('Join Our Community') }}
            </a>
        </div>
    </div>
</section>
