<section id="team" class="py-16 section-gradient-3 gradient-section overflow-hidden">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-blue-500 dark:text-blue-300">
                {{ settings.teamSettings.sectionLabel | default('Tim Kami') }}
            </span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">
                {{ settings.teamSettings.title | default('Meet With Our Team') }}
            </h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ settings.teamSettings.description | default('Tim mahasiswa kami yang berdedikasi untuk membantu sesama tumbuh dan berkembang dalam meraih cita-cita mereka.') }}
            </p>
        </div>
        
        <!-- Team carousel - UPDATED container -->
        <div class="carousel-container fade-up">
            <div class="swiper team-carousel">
                <div class="swiper-wrapper pb-10">
                    {% if collections.teamMembers %}
                        {% for member in collections.teamMembers | sort(false, false, 'data.order') %}
                            <div class="swiper-slide">
                                <div class="team-card bg-white/70 dark:bg-white/10 backdrop-blur-lg rounded-2xl overflow-hidden shadow-lg transition-apple h-full border border-white/20 relative">
                                    <div class="relative overflow-hidden">
                                        <img src="{{ member.data.photo }}" alt="{{ member.data.name }}" class="w-full aspect-square object-cover img-zoom">
                                    </div>
                                    <div class="p-6">
                                        <h3 class="text-lg font-bold heading-apple mb-1 text-apple-darkgray dark:text-white">{{ member.data.name }}</h3>
                                        <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">{{ member.data.position }}</p>
                                        <button class="team-btn w-full py-2 bg-apple-blue text-white rounded-full btn-apple transition-apple">
                                            Get in Touch
                                        </button>
                                        <div class="team-social-buttons">
                                            {% if member.data.instagram %}
                                                <a href="{{ member.data.instagram }}" target="_blank" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                                    <i class="fab fa-instagram text-white"></i>
                                                </a>
                                            {% endif %}
                                            
                                            {% if member.data.email %}
                                                <a href="mailto:{{ member.data.email }}" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                                    <i class="far fa-envelope text-white"></i>
                                                </a>
                                            {% endif %}
                                            
                                            {% if member.data.linkedin %}
                                                <a href="{{ member.data.linkedin }}" target="_blank" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                                    <i class="fab fa-linkedin-in text-white"></i>
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <!-- Default team members if no CMS data -->
                        <div class="swiper-slide">
                            <div class="team-card bg-white/70 dark:bg-white/10 backdrop-blur-lg rounded-2xl overflow-hidden shadow-lg transition-apple h-full border border-white/20 relative">
                                <div class="relative overflow-hidden">
                                    <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=387&amp;q=80" alt="Team Member" class="w-full aspect-square object-cover img-zoom">
                                </div>
                                <div class="p-6">
                                    <h3 class="text-lg font-bold heading-apple mb-1 text-apple-darkgray dark:text-white">Jane Doe</h3>
                                    <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">Head of Department</p>
                                    <button class="team-btn w-full py-2 bg-apple-blue text-white rounded-full btn-apple transition-apple">
                                        Get in Touch
                                    </button>
                                    <div class="team-social-buttons">
                                        <a href="#" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                            <i class="fab fa-instagram text-white"></i>
                                        </a>
                                        <a href="#" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                            <i class="far fa-envelope text-white"></i>
                                        </a>
                                        <a href="#" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                            <i class="fab fa-linkedin-in text-white"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="swiper-slide">
                            <div class="team-card bg-white/70 dark:bg-white/10 backdrop-blur-lg rounded-2xl overflow-hidden shadow-lg transition-apple h-full border border-white/20 relative">
                                <div class="relative overflow-hidden">
                                    <img src="https://images.unsplash.com/photo-1527980965255-d3b416303d12?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=880&amp;q=80" alt="Team Member" class="w-full aspect-square object-cover img-zoom">
                                </div>
                                <div class="p-6">
                                    <h3 class="text-lg font-bold heading-apple mb-1 text-apple-darkgray dark:text-white">John Smith</h3>
                                    <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">Vice Head of Department</p>
                                    <button class="team-btn w-full py-2 bg-apple-blue text-white rounded-full btn-apple transition-apple">
                                        Get in Touch
                                    </button>
                                    <div class="team-social-buttons">
                                        <a href="#" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                            <i class="fab fa-instagram text-white"></i>
                                        </a>
                                        <a href="#" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                            <i class="far fa-envelope text-white"></i>
                                        </a>
                                        <a href="#" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                            <i class="fab fa-linkedin-in text-white"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Add pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
</section>
