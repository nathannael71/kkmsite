<section id="timeline" class="py-16 section-gradient-5 gradient-section">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-blue-500 dark:text-blue-300">
                {{ settings.timelineSettings.sectionLabel | default('Timeline Program') }}
            </span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">
                {{ settings.timelineSettings.title | default('Program Timeline') }}
            </h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ settings.timelineSettings.description | default('Jadwal kegiatan dan program kami untuk tahun akademik 2025.') }}
            </p>
        </div>
        
        <div class="max-w-3xl mx-auto">
            <!-- Timeline accordion -->
            <div class="space-y-6 relative pl-10">
                {% if collections.timelineEvents %}
                    {% for event in collections.timelineEvents | sort(false, false, 'data.order') %}
                        <div class="timeline-node">
                            <div class="timeline-dot"></div>
                            <div class="apple-accordion bg-white/70 dark:bg-white/10 backdrop-blur-lg shadow-lg transition-apple fade-up border border-white/20">
                                <div class="apple-accordion-header flex justify-between items-center cursor-pointer">
                                    <div class="pl-4">
                                        <h3 class="text-lg font-bold heading-apple text-apple-darkgray dark:text-white">{{ event.data.title }}</h3>
                                        <p class="text-gray-600 dark:text-gray-300 text-sm">{{ event.data.date }}</p>
                                    </div>
                                    <span class="accordion-icon pr-4">
                                        <div class="custom-accordion-arrow">
                                            <i class="fas fa-chevron-down text-sm"></i>
                                        </div>
                                    </span>
                                </div>
                                <div class="accordion-content px-4 text-gray-600 dark:text-gray-300">
                                    <p class="mb-4">{{ event.data.description }}</p>
                                    <button class="px-6 py-2 bg-apple-blue text-white rounded-full btn-apple transition-apple">
                                        {{ event.data.buttonText | default('Coming Soon') }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <!-- Default timeline events if no CMS data -->
                    <div class="timeline-node">
                        <div class="timeline-dot"></div>
                        <div class="apple-accordion bg-white/70 dark:bg-white/10 backdrop-blur-lg shadow-lg transition-apple fade-up border border-white/20">
                            <div class="apple-accordion-header flex justify-between items-center cursor-pointer">
                                <div class="pl-4">
                                    <h3 class="text-lg font-bold heading-apple text-apple-darkgray dark:text-white">SkillUp Workshop Series</h3>
                                    <p class="text-gray-600 dark:text-gray-300 text-sm">April 2025</p>
                                </div>
                                <span class="accordion-icon pr-4">
                                    <div class="custom-accordion-arrow">
                                        <i class="fas fa-chevron-down text-sm"></i>
                                    </div>
                                </span>
                            </div>
                            <div class="accordion-content px-4 text-gray-600 dark:text-gray-300">
                                <p class="mb-4">A series of workshops focusing on key skills such as resume writing, interview preparation, and professional communication.</p>
                                <button class="px-6 py-2 bg-apple-blue text-white rounded-full btn-apple transition-apple">
                                    Coming Soon
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="timeline-node">
                        <div class="timeline-dot"></div>
                        <div class="apple-accordion bg-white/70 dark:bg-white/10 backdrop-blur-lg shadow-lg transition-apple fade-up border border-white/20">
                            <div class="apple-accordion-header flex justify-between items-center cursor-pointer">
                                <div class="pl-4">
                                    <h3 class="text-lg font-bold heading-apple text-apple-darkgray dark:text-white">KKM Space Launch</h3>
                                    <p class="text-gray-600 dark:text-gray-300 text-sm">May 2025</p>
                                </div>
                                <span class="accordion-icon pr-4">
                                    <div class="custom-accordion-arrow">
                                        <i class="fas fa-chevron-down text-sm"></i>
                                    </div>
                                </span>
                            </div>
                            <div class="accordion-content px-4 text-gray-600 dark:text-gray-300">
                                <p class="mb-4">Grand opening of our collaborative workspace with networking opportunities, guest speakers, and workshops.</p>
                                <button class="px-6 py-2 bg-apple-blue text-white rounded-full btn-apple transition-apple">
                                    Coming Soon
                                </button>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
