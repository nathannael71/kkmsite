<section id="programs" class="py-16 section-gradient-2 gradient-section">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-purple-500 dark:text-purple-300">
                {{ settings.programsSettings.sectionLabel | default('Program Kami') }}
            </span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">
                {{ settings.programsSettings.title | default('Our Programs') }}
            </h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ settings.programsSettings.description | default('Kami menawarkan berbagai program yang dirancang untuk meningkatkan keterampilan, menampilkan bakat, dan mempersiapkan perjalanan karir Anda.') }}
            </p>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
            {% if collections.programItems %}
                {% for program in collections.programItems | sort(false, false, 'data.order') %}
                    <div class="bg-white/70 dark:bg-white/10 backdrop-blur-lg program-card overflow-hidden shadow-lg transition-apple fade-up border border-white/20">
                        <div class="relative h-48 overflow-hidden">
                            <img src="{{ program.data.image }}" alt="{{ program.data.title }}" class="w-full h-full object-cover img-zoom">
                        </div>
                        <div class="p-5">
                            <h3 class="text-lg font-bold heading-apple mb-2 text-apple-darkgray dark:text-white">{{ program.data.title }}</h3>
                            <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                                {{ program.data.description }}
                            </p>
                            <span class="bg-purple-100 dark:bg-purple-400/20 text-purple-600 dark:text-purple-200 px-3 py-1 rounded-full text-xs font-medium border border-purple-200 dark:border-purple-400/40">
                                {{ program.data.status | default('Coming Soon') }}
                            </span>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <!-- Default program items if no CMS data -->
                <div class="bg-white/70 dark:bg-white/10 backdrop-blur-lg program-card overflow-hidden shadow-lg transition-apple fade-up border border-white/20">
                    <div class="relative h-48 overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1497215842964-222b430dc094?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=1170&amp;q=80" alt="KKM Space" class="w-full h-full object-cover img-zoom">
                    </div>
                    <div class="p-5">
                        <h3 class="text-lg font-bold heading-apple mb-2 text-apple-darkgray dark:text-white">KKM Space</h3>
                        <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                            A collaborative workspace for students to work, share ideas, and network.
                        </p>
                        <span class="bg-purple-100 dark:bg-purple-400/20 text-purple-600 dark:text-purple-200 px-3 py-1 rounded-full text-xs font-medium border border-purple-200 dark:border-purple-400/40">
                            Coming Soon
                        </span>
                    </div>
                </div>
                
                <div class="bg-white/70 dark:bg-white/10 backdrop-blur-lg program-card overflow-hidden shadow-lg transition-apple fade-up border border-white/20">
                    <div class="relative h-48 overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1552581234-26160f608093?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=1170&amp;q=80" alt="SkillUp [InsightUp]" class="w-full h-full object-cover img-zoom">
                    </div>
                    <div class="p-5">
                        <h3 class="text-lg font-bold heading-apple mb-2 text-apple-darkgray dark:text-white">SkillUp [InsightUp]</h3>
                        <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                            Workshops and seminars focused on practical skill development.
                        </p>
                        <span class="bg-purple-100 dark:bg-purple-400/20 text-purple-600 dark:text-purple-200 px-3 py-1 rounded-full text-xs font-medium border border-purple-200 dark:border-purple-400/40">
                            Coming Soon
                        </span>
                    </div>
                </div>
                
                <div class="bg-white/70 dark:bg-white/10 backdrop-blur-lg program-card overflow-hidden shadow-lg transition-apple fade-up border border-white/20">
                    <div class="relative h-48 overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=1170&amp;q=80" alt="[WeGrowth!]" class="w-full h-full object-cover img-zoom">
                    </div>
                    <div class="p-5">
                        <h3 class="text-lg font-bold heading-apple mb-2 text-apple-darkgray dark:text-white">[WeGrowth!]</h3>
                        <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                            Mentorship program connecting students with experienced professionals.
                        </p>
                        <span class="bg-purple-100 dark:bg-purple-400/20 text-purple-600 dark:text-purple-200 px-3 py-1 rounded-full text-xs font-medium border border-purple-200 dark:border-purple-400/40">
                            Coming Soon
                        </span>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</section>
