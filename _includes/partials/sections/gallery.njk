<section id="gallery" class="py-16 section-gradient-1 gradient-section overflow-hidden">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-purple-500 dark:text-purple-300">
                {{ settings.gallerySettings.sectionLabel | default('Galeri Kegiatan') }}
            </span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">
                {{ settings.gallerySettings.title | default('Our Activity Gallery') }}
            </h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ settings.gallerySettings.description | default('Dokumentasi kegiatan dan acara kami yang telah membantu mahasiswa tumbuh dan berkembang.') }}
            </p>
        </div>
        
        <!-- Album carousel -->
        <div class="album-carousel-container fade-up">
            <div class="swiper album-carousel">
                <div class="swiper-wrapper pb-10">
                    {% if collections.galleryItems %}
                        {% for item in collections.galleryItems | sort(false, false, 'data.order') %}
                            <div class="swiper-slide">
                                <div class="rounded-2xl overflow-hidden shadow-lg h-full">
                                    <div class="gallery-img-container">
                                        <img src="{{ item.data.image }}" alt="{{ item.data.title }}" class="w-full h-full object-cover">
                                        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex flex-col justify-end p-6">
                                            <h3 class="text-white text-xl font-bold heading-apple">{{ item.data.title }}</h3>
                                            <p class="text-white/80 text-sm mt-2">{{ item.data.date }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <!-- Default gallery items if no CMS data -->
                        <div class="swiper-slide">
                            <div class="rounded-2xl overflow-hidden shadow-lg h-full">
                                <div class="gallery-img-container">
                                    <img src="https://images.unsplash.com/photo-1540317580384-e5d43867caa6?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=1170&amp;q=80" alt="Workshop" class="w-full h-full object-cover">
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex flex-col justify-end p-6">
                                        <h3 class="text-white text-xl font-bold heading-apple">Workshop: Resume Building</h3>
                                        <p class="text-white/80 text-sm mt-2">March 2024</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="swiper-slide">
                            <div class="rounded-2xl overflow-hidden shadow-lg h-full">
                                <div class="gallery-img-container">
                                    <img src="https://images.unsplash.com/photo-1475721027785-f74eccf877e2?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=1170&amp;q=80" alt="Company Visit" class="w-full h-full object-cover">
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex flex-col justify-end p-6">
                                        <h3 class="text-white text-xl font-bold heading-apple">Company Visit: Tech Startup</h3>
                                        <p class="text-white/80 text-sm mt-2">February 2024</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Add pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
        
        <!-- View all button -->
        <div class="text-center mt-12">
            <a href="{{ settings.gallerySettings.viewAllButtonUrl | default('/gallery') }}" class="px-8 py-3 bg-white/20 dark:bg-white/10 backdrop-blur-lg text-apple-darkgray dark:text-white rounded-full transition-apple hover:bg-white/30 dark:hover:bg-white/20 border border-white/20 fade-up">
                {{ settings.gallerySettings.viewAllButtonText | default('View Full Gallery') }}
            </a>
        </div>
    </div>
</section>
