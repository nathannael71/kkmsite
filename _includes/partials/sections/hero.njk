<section id="home" class="w-full h-screen flex flex-col justify-center items-center overflow-hidden relative">
    <!-- Hero image slider -->
    <div class="absolute inset-0 z-0 bg-black">
        <div class="hero-slider relative h-full w-full">
            {% if settings.hero.slides %}
                {% for slide in settings.hero.slides %}
                    <div class="hero-slide{% if loop.first %} active{% endif %}">
                        <img src="{{ slide.image }}" alt="{{ slide.alt }}" class="w-full h-full object-cover opacity-40">
                    </div>
                {% endfor %}
            {% else %}
                <!-- Default slides if no CMS data -->
                <div class="hero-slide active">
                    <img src="https://images.unsplash.com/photo-1531482615713-2afd69097998?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=1740&amp;q=80" alt="Students collaborating" class="w-full h-full object-cover opacity-40">
                </div>
                <div class="hero-slide">
                    <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=1740&amp;q=80" alt="Team collaboration" class="w-full h-full object-cover opacity-40">
                </div>
                <div class="hero-slide">
                    <img src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&amp;auto=format&amp;fit=crop&amp;w=1740&amp;q=80" alt="Creative workspace" class="w-full h-full object-cover opacity-40">
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Apple-style centered text -->
    <div class="container mx-auto px-4 text-center z-10 pt-24">
        <h1 class="text-4xl sm:text-6xl md:text-7xl font-bold heading-apple mb-6 text-white leading-tight">
            {{ settings.hero.title | default('GROW YOUR SKILL<br>WITH US') | safe }}
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-white/90 max-w-3xl mx-auto subheading-apple mb-8">
            {{ settings.hero.subtitle | default('Empowering students through career development and creative outlets') }}
        </p>
        
        <a href="{{ settings.hero.buttonUrl | default('#about') }}" class="inline-flex items-center justify-center px-8 py-4 bg-apple-blue text-white rounded-full transition-apple hover:bg-blue-600 mt-4">
            <span class="font-medium text-lg">{{ settings.hero.buttonText | default('Learn More') }}</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
        </a>
    </div>
    
    <!-- Slider navigation dots -->
    <div class="absolute bottom-6 left-0 right-0 flex justify-center space-x-2 z-10">
        {% if settings.hero.slides %}
            {% for slide in settings.hero.slides %}
                <button class="hero-nav-dot w-3 h-3 rounded-full bg-white {% if loop.first %}opacity-100{% else %}opacity-50{% endif %} transition-opacity" data-index="{{ loop.index0 }}"></button>
            {% endfor %}
        {% else %}
            <!-- Default navigation dots if no CMS data -->
            <button class="hero-nav-dot w-3 h-3 rounded-full bg-white opacity-100 transition-opacity" data-index="0"></button>
            <button class="hero-nav-dot w-3 h-3 rounded-full bg-white opacity-50 transition-opacity" data-index="1"></button>
            <button class="hero-nav-dot w-3 h-3 rounded-full bg-white opacity-50 transition-opacity" data-index="2"></button>
        {% endif %}
    </div>
</section>
