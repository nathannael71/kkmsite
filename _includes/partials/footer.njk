<footer class="py-12 bg-black text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Logo and description -->
            <div class="md:col-span-2">
                <div class="flex items-center mb-6">
                    <div class="flex space-x-2 mr-4">
                        <!-- UNY logo -->
                        <div class="w-8 h-8 bg-gray-700 rounded-full flex items-center justify-center overflow-hidden">
                            {% if settings.footer.unyLogo %}
                                <img src="{{ settings.footer.unyLogo }}" alt="UNY Logo" class="w-full h-full object-cover">
                            {% else %}
                                <span class="text-xs font-bold">UNY</span>
                            {% endif %}
                        </div>
                        <!-- BEM KM logo -->
                        <div class="w-8 h-8 bg-gray-700 rounded-full flex items-center justify-center overflow-hidden">
                            {% if settings.footer.bemLogo %}
                                <img src="{{ settings.footer.bemLogo }}" alt="BEM Logo" class="w-full h-full object-cover">
                            {% else %}
                                <span class="text-xs font-bold">BEM</span>
                            {% endif %}
                        </div>
                    </div>
                    <h3 class="text-lg font-bold heading-apple">KARIR DAN KARYA MAHASISWA</h3>
                </div>
                <p class="text-gray-400 mb-6">
                    {{ settings.footer.description | default('Dedicated to helping students at Universitas Negeri Yogyakarta develop their skills, showcase their talent, and prepare for their future careers.') }}
                </p>
                <div class="flex space-x-4">
                    {% if settings.footer.socialMedia %}
                        {% for social in settings.footer.socialMedia %}
                            <a href="{{ social.url }}" target="_blank" class="text-gray-400 hover:text-white transition-apple">
                                <i class="{{ social.icon }} text-xl"></i>
                            </a>
                        {% endfor %}
                    {% else %}
                        <!-- Default social media links if no CMS data -->
                        <a href="https://instagram.com/kkm.bemuny" target="_blank" class="text-gray-400 hover:text-white transition-apple">
                            <i class="fab fa-instagram text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-apple">
                            <i class="fab fa-twitter text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-apple">
                            <i class="fab fa-linkedin text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-apple">
                            <i class="fab fa-youtube text-xl"></i>
                        </a>
                    {% endif %}
                </div>
            </div>
            
            <!-- Quick links -->
            <div>
                <h4 class="text-base font-bold heading-apple mb-5">Quick Links</h4>
                <ul class="space-y-3">
                    {% if settings.footer.quickLinks %}
                        {% for link in settings.footer.quickLinks %}
                            <li><a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-apple">{{ link.text }}</a></li>
                        {% endfor %}
                    {% else %}
                        <!-- Default quick links if no CMS data -->
                        <li><a href="#home" class="text-gray-400 hover:text-white transition-apple">Home</a></li>
                        <li><a href="#about" class="text-gray-400 hover:text-white transition-apple">About Us</a></li>
                        <li><a href="#programs" class="text-gray-400 hover:text-white transition-apple">Programs</a></li>
                        <li><a href="#team" class="text-gray-400 hover:text-white transition-apple">Our Team</a></li>
                        <li><a href="#articles" class="text-gray-400 hover:text-white transition-apple">Articles</a></li>
                        <li><a href="#gallery" class="text-gray-400 hover:text-white transition-apple">Gallery</a></li>
                        <li><a href="#contact" class="text-gray-400 hover:text-white transition-apple">Contact</a></li>
                    {% endif %}
                </ul>
            </div>
            
            <!-- Contact info -->
            <div>
                <h4 class="text-base font-bold heading-apple mb-5">Contact Info</h4>
                <ul class="space-y-3">
                    <li class="flex items-start">
                        <i class="fas fa-map-marker-alt text-apple-blue mt-1 mr-3"></i>
                        <span class="text-gray-400">{{ settings.footer.contactInfo.address | default('Student Center Building, Universitas Negeri Yogyakarta, Karangmalang, Yogyakarta') }}</span>
                    </li>
                    <li class="flex items-start">
                        <i class="far fa-envelope text-apple-blue mt-1 mr-3"></i>
                        <a href="mailto:{{ settings.footer.contactInfo.email | default('kkmbemuny@gmail.com') }}" class="text-gray-400 hover:text-white transition-apple">{{ settings.footer.contactInfo.email | default('kkmbemuny@gmail.com') }}</a>
                    </li>
                    <li class="flex items-start">
                        <i class="fab fa-instagram text-apple-blue mt-1 mr-3"></i>
                        <a href="https://instagram.com/{{ settings.footer.contactInfo.instagram | default('kkm.bemuny') | replace('@', '') }}" target="_blank" class="text-gray-400 hover:text-white transition-apple">{{ settings.footer.contactInfo.instagram | default('@kkm.bemuny') }}</a>
                    </li>
                </ul>
            </div>
        </div>
        
        <hr class="border-gray-800 my-8">
        
        <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-gray-400 text-sm mb-4 md:mb-0">
                {{ settings.footer.copyright | default('Â© 2025 Karir dan Karya Mahasiswa BEM KM UNY. All rights reserved.') }}
            </p>
            <div class="flex space-x-6">
                {% if settings.footer.legalLinks %}
                    {% for link in settings.footer.legalLinks %}
                        <a href="{{ link.url }}" class="text-gray-400 hover:text-white text-sm transition-apple">{{ link.text }}</a>
                    {% endfor %}
                {% else %}
                    <!-- Default legal links if no CMS data -->
                    <a href="#" class="text-gray-400 hover:text-white text-sm transition-apple">Privacy Policy</a>
                    <a href="#" class="text-gray-400 hover:text-white text-sm transition-apple">Terms of Service</a>
                {% endif %}
            </div>
        </div>
    </div>
</footer>
