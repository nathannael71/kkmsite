<!-- About section -->
<section id="about" class="py-16 section-gradient-1 gradient-section">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-blue-500 dark:text-blue-300">{{ about.sectionLabel }}</span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">{{ about.title }}</h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ about.description }}
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for feature in about.features %}
            <div class="bg-white/70 dark:bg-white/10 backdrop-blur-lg rounded-2xl p-8 shadow-lg transition-apple transform hover:-translate-y-2 fade-up border border-white/20">
                <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mb-6">
                    <i class="fas fa-{{ feature.icon }} text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold heading-apple text-apple-darkgray dark:text-white mb-4">{{ feature.title }}</h3>
                <p class="text-gray-600 dark:text-gray-300">
                    {{ feature.description }}
                </p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
