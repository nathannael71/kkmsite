<!-- Team section with 6 members - UPDATED for better centering -->
<section id="team" class="py-16 section-gradient-3 gradient-section overflow-hidden">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-blue-500 dark:text-blue-300">{{ teamSettings.sectionLabel }}</span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">{{ teamSettings.title }}</h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ teamSettings.description }}
            </p>
        </div>
        
        <!-- Team carousel - UPDATED container -->
        <div class="carousel-container fade-up">
            <div class="swiper team-carousel">
                <div class="swiper-wrapper pb-10">
                    {% for member in team %}
                    <div class="swiper-slide">
                        <div class="team-card bg-white/70 dark:bg-white/10 backdrop-blur-lg rounded-2xl overflow-hidden shadow-lg transition-apple h-full border border-white/20 relative">
                            <div class="relative overflow-hidden">
                                <img src="{{ member.photo }}" alt="{{ member.name }}" class="w-full aspect-square object-cover img-zoom">
                            </div>
                            <div class="p-6">
                                <h3 class="text-lg font-bold heading-apple mb-1 text-apple-darkgray dark:text-white">{{ member.name }}</h3>
                                <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">{{ member.position }}</p>
                                <button class="team-btn w-full py-2 bg-apple-blue text-white rounded-full btn-apple transition-apple">
                                    Get in Touch
                                </button>
                                <div class="team-social-buttons">
                                    {% if member.instagram %}
                                    <a href="{{ member.instagram }}" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                        <i class="fab fa-instagram text-white"></i>
                                    </a>
                                    {% endif %}
                                    {% if member.email %}
                                    <a href="mailto:{{ member.email }}" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                        <i class="far fa-envelope text-white"></i>
                                    </a>
                                    {% endif %}
                                    {% if member.linkedin %}
                                    <a href="{{ member.linkedin }}" class="w-10 h-10 bg-apple-blue rounded-full flex items-center justify-center">
                                        <i class="fab fa-linkedin-in text-white"></i>
                                    </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                
                <!-- Add pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
</section>
