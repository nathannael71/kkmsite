<!-- Location section - UPDATED with custom rounded corners for map -->
<section id="location" class="py-16 section-gradient-3 gradient-section">
    <div class="main-container">
        <div class="text-center mb-16">
            <span class="text-sm uppercase tracking-wider text-purple-500 dark:text-purple-300">{{ location.sectionLabel }}</span>
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple text-apple-darkgray dark:text-white mb-6 fade-up">{{ location.title }}</h2>
            <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto fade-up">
                {{ location.description }}
            </p>
        </div>
        
        <!-- Map container - UPDATED with custom rounded corners -->
        <div class="rounded-2xl overflow-hidden shadow-lg transition-apple fade-up">
            <div class="map-container">
                <iframe src="{{ location.mapUrl }}" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            
            <!-- Map info overlay - Added bottom border radius -->
            <div class="bg-white/20 dark:bg-white/10 backdrop-blur-lg p-6 transition-apple border-t border-white/20 rounded-b-2xl">
                <div class="flex flex-wrap justify-between items-center">
                    <div class="mb-4 md:mb-0">
                        <h3 class="text-xl font-bold heading-apple mb-2 text-apple-darkgray dark:text-white">{{ location.locationName }}</h3>
                        <p class="text-gray-600 dark:text-gray-300">{{ location.fullAddress }}</p>
                    </div>
                    <div class="flex space-x-4">
                        <button onclick="navigator.share({title: 'Lokasi BEM KM UNY', url: 'https://goo.gl/maps/8XYZabcdefg'})" class="px-4 py-2 bg-white/20 dark:bg-white/10 backdrop-blur-lg text-apple-darkgray dark:text-white rounded-lg transition-apple hover:bg-white/30 dark:hover:bg-white/20 border border-white/20">
                            <i class="fas fa-share-alt mr-2"></i> Share
                        </button>
                        <a href="{{ location.directionsUrl }}" target="_blank" class="px-4 py-2 bg-apple-blue text-white rounded-lg transition-apple hover:bg-blue-600">
                            <i class="fas fa-directions mr-2"></i> Directions
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- CTA section -->
        <div class="mt-24 text-center fade-up">
            <h2 class="text-3xl sm:text-4xl font-bold heading-apple mb-6 text-apple-darkgray dark:text-white">{{ location.cta.title }}</h2>
            <p class="text-gray-600 dark:text-gray-300 text-xl max-w-3xl mx-auto mb-10">
                {{ location.cta.description }}
            </p>
            <a href="{{ location.cta.buttonUrl }}" class="px-8 py-4 bg-apple-blue text-white rounded-full btn-apple transition-apple text-lg font-medium">
                {{ location.cta.buttonText }}
            </a>
        </div>
    </div>
</section>
